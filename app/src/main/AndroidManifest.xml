<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.nevesrafael.anacosmeticos">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AnaCosmeticos">
        <activity
            android:name="com.nevesrafael.anacosmeticos.CadastroActivity"
            android:label="Cadastra Produtos" />
        <activity
            android:name="com.nevesrafael.anacosmeticos.ListaProdutosActivity"
            android:label="Lista de Produtos"
            android:exported="true">

        </activity>
        <activity
            android:name="com.nevesrafael.anacosmeticos.TelaInicialActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>